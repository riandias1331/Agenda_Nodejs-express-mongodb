<%- include ('includes/head'); %>
    <%- include ('includes/nav'); %>

        <style>
            .index {
                display: flex;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                margin: 200px;
            }

            .signup-container {
                width: 300px;
                padding: 20px;
                background-color: #fff;
                border-radius: 8px;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                text-align: center;
            }

            h2 {
                color: #333;
                margin-bottom: 20px;
            }

            .input-field {
                width: 100%;
                padding: 10px;
                margin: 10px 0;
                border: 1px solid #ccc;
                border-radius: 4px;
                font-size: 16px;
            }

            .signup-btn {
                width: 100%;
                padding: 10px;
                background-color: #4CAF50;
                border: none;
                border-radius: 4px;
                color: white;
                font-size: 16px;
                cursor: pointer;
            }

            .signup-btn:hover {
                background-color: #45a049;
            }

            .login-link {
                margin-top: 20px;
                color: #333;
            }

            .login-link a {
                color: #4CAF50;
                text-decoration: none;
                font-weight: bold;
            }

            .login-link a:hover {
                text-decoration: underline;
            }
        </style>


        <body>

            <main class="index">

                <div class="signup-container">
                    <h2>Criar Conta</h2>
                    <form action="/login/register " method="post">
                        <input type="email" name="email" class="input-field" placeholder="Email" required>
                        <input type="password" name="senha" class="input-field" placeholder="Senha" required>
                        <button type="submit" class="signup-btn">Cadastrar</button>
                    </form>
                    <p class="login-link">Já tem uma conta? <a href="/login/enter">Faça login</a></p>
                </div>

                <div class="errorMensage">
                    <h1 class="error">error</h1>
                </div>



                </div>
            </main>


        </body>

        <%- include ('includes/footer'); %>